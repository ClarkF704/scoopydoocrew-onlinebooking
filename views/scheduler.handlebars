<div class="container">
  <div class="wrapper animated bounceInLeft">
    <div class="company-info">
      <h3 style="font-family: 'Acme', sans-serif">ScoopyDooCrew Online Booking</h3>
      <ul>
        <li style="font-family: 'Montserrat', sans-serif;"><i class="fa fa-phone"></i> 704-680-7206</li>
        <li style="font-family: 'Montserrat', sans-serif;"><i class="fa fa-envelope"></i> scoopydoocrewllc@gmail.com</li>
      </ul>
    </div>
    <div class="contact">
      <h3 style="font-family: 'Acme', sans-serif">Appointment Details</h3>
      {{msg}}
      <hr>
      <br>
      {{!-- data-image="{{scoopyDooCrewLogoIcon}}"  This is the logo for stripe checkout form--}}
      <form action="/charge" method="POST">
        <script src="https://checkout.stripe.com/checkout.js" class="stripe-button" data-key="{{stripePublishableKey}}"
          data-amount="1000" data-name="ScoopyDooCrew" data-description="Online Service Booking" data-locale="auto">
          </script>
        <p style="font-family: 'Montserrat', sans-serif;">
          <label>Name</label>
          <input type="text" name="name" required>
        </p>
        
        <p style="font-family: 'Montserrat', sans-serif;">
          <label>Email Address</label>
          <input type="email" name="email" required>
        </p>
        <p style="font-family: 'Montserrat', sans-serif;">
          <label>Phone Number</label>
          <input type="text" name="phone" required>
        </p>
         <p style="font-family: 'Montserrat', sans-serif;">
          <label>Service Address</label>
          <input type="text" name="address" required>
        </p>
        <p class="full" style="font-family: 'Montserrat', sans-serif;">
          <label>What should we be aware of ?</label>
          <textarea name="message" rows="5"></textarea>
        </p>
        <p style="font-family: 'Montserrat', sans-serif;">
          <label>Date:</label>
            <div id="datepicker" class="input-group date" data-date-format="mm-dd-yyyy" required>
              <input class="form-control" type="text" name="date" required />
              <span class="input-group-addon"><i class="fa fa-calendar" aria-hidden="true"></i></span>
            </div>
        </p>
        <script>
          // Hide default stripe button
          document.getElementsByClassName('stripe-button-el')[0].style.display = 'none';
        </script>
        <button type="submit" style="font-family: 'Montserrat', sans-serif;" class="btn btn-outline-dark btn-lg ">Confirm Service</button>
      </form>

    </div>
  </div>
</div>